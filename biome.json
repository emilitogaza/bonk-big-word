{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/*.log",
      "!**/pnpm-lock.yaml",
      "!**/package-lock.json",
      "!**/public",
      "!**/.git",
      "!**/*.png",
      "!**/*.jpg",
      "!**/*.jpeg",
      "!**/*.svg",
      "!**/*.gif",
      "!**/*.webp",
      "!**/*.ico",
      "!**/*.woff",
      "!**/*.woff2",
      "!**/*.ttf",
      "!**/*.eot"
    ]
  },
  "overrides": [
    {
      "includes": ["prismicio-types.d.ts"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    },
    {
      "includes": ["src/app/globals.css"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ],
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "fix": "unsafe",
          "level": "warn",
          "options": {
            "attributes": ["classList", "className"],
            "functions": ["cn", "clsx", "cva", "tw"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
